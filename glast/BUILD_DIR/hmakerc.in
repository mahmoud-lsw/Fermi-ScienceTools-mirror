GT_HEALPIX_LIBS="-lhealpix"
GT_EVTBIN_LIBS="-levtbin -lhealpix"
GT_BURSTFIT_LIBS="-lburstFit"
GT_DATASUBSELECTOR_LIBS="-ldataSubselector"
GT_MAP_TOOLS_LIBS="-lmap_tools"
