PYTHON_INC="-I$EXT_BLD_EXEC_PFX/include/$PYTHON -I$HD_TOP_EXEC_PFX/include/$PYTHON"
PYTHON_LIB="-L$EXT_BLD_EXEC_PFX/lib/$PYTHON/config -L$HD_TOP_EXEC_PFX/lib/$PYTHON/config -l$PYTHON"
