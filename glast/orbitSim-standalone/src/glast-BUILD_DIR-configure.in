  if test "x${UNAME_SYSTEM}" = "xIRIX" -a "x${F77_BASENAME}" = "xf90"; then
      AC_MSG_ERROR(IRIX Fortran 90 is not currently supported; please use f77)
  fi
  AC_PROG_F77
  if test "x$G77" = x; then
    G77=no
  fi
fi
