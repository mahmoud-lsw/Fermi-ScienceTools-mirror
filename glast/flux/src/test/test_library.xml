    <!-- special source that mimics non-interacting cosmics -->
    <source name="cosmic_muons" flux="100">
        <spectrum escale="GeV">
            <particle name="mu+"> <energy e="10"/> </particle>
            <solid_angle mincos="-0.4" maxcos="1.0"/>
        </spectrum>
    </source>


    <source name="vertical_muons" flux="1.0">
        <spectrum escale="GeV">
            <particle name="mu+"> <energy e="10."/> </particle>
