        <spectrum escale="GeV">
            <particle name="gamma"> <power_law emin="0.01778" emax="17.78" gamma="1"/>
            </particle>
            <solid_angle mincos="0.99" maxcos="1.0"/>
        </spectrum>
    </source>


	<!--1 gev -->
    <source name="gamma_1_gev_normal" flux="1.0">
        <spectrum escale="GeV">
            <particle name="gamma"> <energy e="1"/> </particle>
            <solid_angle mincos="0.99" maxcos="1.0"/>
