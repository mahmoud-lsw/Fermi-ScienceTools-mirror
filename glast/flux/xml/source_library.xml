    <source name="diffuse-20mev" flux="0.85">
        <spectrum escale="GeV">
            <particle name="gamma">  <power_law emin="0.02" emax="1e3" gamma="2.1"/></particle>
            <solid_angle mincos="-0.4" maxcos="1.0"/>
        </spectrum>
    </source>


    <!-- diffuse extraglactic from 100 MeV: see above for numbers-->
